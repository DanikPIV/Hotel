<Window x:Class="Hotel.MessggeBoks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"  
        xmlns:local="clr-namespace:Hotel"
        mc:Ignorable="d"
        Title="Выберите диапазон дат" Height="159" Width="314" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <Label Content="От:"/>
            <DatePicker x:Name="date_picker1" Width="125"/>
            <Label Content="До:"/>
            <DatePicker x:Name="date_picker2" Width="125"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,5,5">
            <Button x:Name="ok" Margin="5,0,5,0" Style="{StaticResource MaterialDesignOutlinedButton}" Content="Oк" Click="ok_Click"/>
            <Button x:Name="Cencel" Margin="5,0,5,0" Style="{StaticResource MaterialDesignOutlinedButton}" Content="Отмена" Click="Cencel_Click"/>
        </StackPanel>

    </Grid>
</Window>
